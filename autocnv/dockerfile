############## 运行提示 ################
# 请提前准备好数据库
# python3 create-database.py

# 需要mount进所有目录
# docker run -it --rm -v /autocnv_data:/opt/autocnv/data -v /vep_data:/root/.vep -v /ref_data:/ref_data autocnv:20241223

# 第一个命令，先调整autopvs1的配置文件
# cp self.config.ini /opt/autopvs1/config.ini
#######################################

FROM ensemblorg/ensembl-vep:release_113.3

# 基础依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    zlib1g-dev \
    libbz2-dev \
    liblzma-dev \
    python3 \
    python3-pip \
    curl \
    wget \
    expat \
    libdb-dev \
    openssl \
    bgzip \
    tabix \
    && rm -rf /var/lib/apt/lists/*

# 安装python依赖库
RUN python3 -m pip install --no-cache-dir --upgrade pip && \
    python3 -m pip install --no-cache-dir \
    pandas \
    pyfaidx \
    pysam \
    gtfparse==1.2.1

# 安装AutoPVS1
RUN git clone https://github.com/JiguangPeng/autopvs1.git && \
    cd autopvs1 && \
    /opt/venv/bin/pip install -e .

# 安装AutoCNV
RUN git clone https://github.com/zhonghua-wang/autocnv.git

# 设置环境变量
LABEL maintainer='pzweuj' version='20241223' vep='v113' autopvs1='v2.0' autocnv='e25ca01'
